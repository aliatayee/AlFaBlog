<div class="w-full mt-2">
<%= form_with url: "/users/#{@post.author_id}/posts/#{@post.id}/comments", scope: :comment  do |form| %>
    <div class="w-full">
      <div class="flex flex-wrap -m-2">
        <div class="p-2 w-full">
          <div class="relative">
            <%= form.text_area :text, placeholder: "Type your comment ...", rows: 10, required: true,  class: "w-full bg-gray-800 bg-opacity-40 rounded border border-gray-700 focus:border-green-500 focus:bg-gray-900 focus:ring-2 focus:ring-green-900 h-32 text-base outline-none text-gray-100 py-1 px-3 resize-none leading-6 transition-colors duration-200 ease-in-out" %>
            
          </div>
        </div>
        <div class="p-2 w-full text-left">
           <%= form.submit "Comment", class: "flex text-white bg-green-500 border-0 py-2 px-8 focus:outline-none hover:bg-green-600 rounded text-sm" %>
        </div>
        
      </div>
    </div>
<% end %>
    </div>