<section class="text-gray-400 bg-gray-900 body-font overflow-hidden">
  <div class="container px-5 py-24 mx-auto">
    <div class="flex flex-wrap -m-12 justify-center">
      <div class="p-12 md:w-1/2 flex flex-col items-start">
      <div class="border-b-2 border-gray-800 border-opacity-75 w-full mb-5 pb-5">
      <a class="inline-flex items-center">
          <img alt="<%=@user.name%>" src=<%= @user.photo%> class="w-12 h-12 rounded-full flex-shrink-0 object-cover object-center">
          <span class="flex-grow flex flex-col pl-4">
            <span class="title-font font-medium text-white"><%= @user.name%></span>
            <span class="text-gray-500 text-xs tracking-widest mt-0.5">Total Posts: <%= @user.posts_counter %></span>
          </span>
        </a>
        </div>
        <span class="inline-block py-1 px-2 rounded bg-gray-800 text-gray-400 text-opacity-75 text-xs font-medium tracking-widest">BIO</span>
        <p class="leading-relaxed mb-8"><%= @user.bio %></p>
        <div class="flex items-center flex-wrap pb-4 mb-4 border-b-2 border-gray-800 border-opacity-75 mt-auto w-full">
        </div>

        <br>
         <% @user.three_recent_posts.each do |post| %>
        <%= link_to user_post_path(@user.id, post.id), class:"w-full" do %> 
        <span class="inline-block py-1 px-2 rounded bg-gray-800 text-gray-400 text-opacity-75 text-xs font-medium tracking-widest">POST</span>
        <h2 class="sm:text-3xl text-2xl title-font font-medium text-white mt-4 mb-4"><%= post.title %></h2>
        <p class="leading-relaxed mb-8"><%= post.text %></p>
        <div class="flex items-center flex-wrap pb-4 mb-4 border-b-2 border-gray-800 border-opacity-75 mt-auto w-full">
          
          <span class="text-gray-500 mr-3 inline-flex items-center ml-auto leading-none text-sm pr-3 py-1 border-r-2 border-gray-800">
            <i class="fa-regular fa-thumbs-up"></i>&nbsp;<%= post.likes_counter %>
          </span>
          <span class="text-gray-500 inline-flex items-center leading-none text-sm">
            <svg class="w-4 h-4 mr-1" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round" viewBox="0 0 24 24">
              <path d="M21 11.5a8.38 8.38 0 01-.9 3.8 8.5 8.5 0 01-7.6 4.7 8.38 8.38 0 01-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 01-.9-3.8 8.5 8.5 0 014.7-7.6 8.38 8.38 0 013.8-.9h.5a8.48 8.48 0 018 8v.5z"></path>
            </svg><%= post.comments_counter %>
          </span>
        </div>
         <% end %>
    <% end%>
     <button class="flex mx-auto mt-16 text-white bg-purple-500 border-0 py-2 px-8 focus:outline-none hover:bg-purple-600 rounded text-lg"> <%= link_to "See All Posts", user_posts_path(@user) %></button>
      </div>
    </div>
  </div>
</section>