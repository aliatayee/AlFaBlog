<section class="text-gray-400 bg-gray-900 body-font relative">
  
  <div class=" px-5 py-24 justify-center flex">
    <div class="lg:w-1/3 md:w-1/3 bg-gray-800 shadow-md rounded-lg p-8 flex flex-col  w-full mt-10 md:mt-0 relative z-10">
      <h2 class="text-white text-lg mb-1 font-medium title-font">Login</h2>
       <%= render "devise/shared/error_messages", resource: resource %>
      <%= form_for(resource, as: resource_name,html: {'data-turbo' => "false"}, url: session_path(resource_name)) do |f| %>
      <div class="relative mb-4">
         <%= f.label :email, class: "leading-7 text-sm text-gray-400" %>
          <%= f.email_field :email, autofocus: false, autocomplete: "email", class:"w-full bg-gray-800 rounded border border-gray-700 focus:border-green-500 focus:ring-2 focus:ring-green-900 text-base outline-none text-gray-100 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out" %>
      </div>
      <div class="relative mb-4">
        <%= f.label :password, class: "leading-7 text-sm text-gray-400" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class:"w-full bg-gray-800 rounded border border-gray-700 focus:border-green-500 focus:ring-2 focus:ring-green-900 text-base outline-none text-gray-100 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out" %>
      </div>
      <% if devise_mapping.rememberable? %>
      <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
      </div>
      <% end %>
    
  <br/>
  <div class="actions">
    <%= f.submit "Log in", class:"text-white bg-green-500 border-0 py-2 px-6 focus:outline-none block w-full hover:bg-green-600 rounded text-lg" %>
  </div>
  <% end %>
    <br />
      <%= render "devise/shared/links" %>
    </div>
  </div>


</section>


  

